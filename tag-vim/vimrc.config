set nobackup
set nowritebackup
set noswapfile

" Disable linewrapping
set nowrap

" Natural Splitting
set splitbelow
set splitright

" Softtabs, 2 spaces
set tabstop=2
set shiftwidth=2
set shiftround
set expandtab

" Use The Silver Searcher https://github.com/ggreer/the_silver_searcher
if executable('ag')
  " Use Ag over Grep
  set grepprg=ag\ --nogroup\ --nocolor
endif

" Matchit
runtime macros/matchit.vim

" Search Highlighting
set hlsearch

" Numbers
set number
set numberwidth=5

" Listchars
set listchars=tab:»·,trail:·,extends:>,eol:¬

let g:CommandTMaxHeight=10

set showcmd
